@model ChessTD2.Models.Tournament

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { tID = Model.TournamentID })


</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Sections)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { sId = item.SectionID, tId = Model.TournamentID}) |
                @Html.ActionLink("Details", "Details", new { sId = item.SectionID, tId = Model.TournamentID }) |
                @Html.ActionLink("Delete", "Delete", new { sId = item.SectionID, tId = Model.TournamentID }) |
                @Html.ActionLink("Manage Players", "Participants", "SectionPlayers", new { sId = item.SectionID, tId = Model.TournamentID })


            </td>
        </tr>
    }

</table>
