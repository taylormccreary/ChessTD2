@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Board</th>
                    <th>No</th>
                    <th>Name</th>
                    <th>Pts</th>
                    <th>Result</th>
                    <th>No</th>
                    <th>Name</th>
                    <th>Pts</th>
                    <th>Result</th>
                </tr>
            </thead>
            <tbody id="pairings">
                
                    <tr>
                        <th>Board</th>
                        <th>Name</th>
                        <th>@ViewBag.Player.Rating</th>
                        <th>Pts</th>
                        <th>Result</th>
                        <th>No</th>
                        <th>Name</th>
                        <th>Pts</th>
                        <th>Result</th>
                    </tr>

                
            </tbody>
        </table>
    </div>
    <div class="col-sm-3"></div>
</div>

<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-3">
        <button id="randResults" class="btn btn-primary btn-block">Generate random results</button>
    </div>
    <div class="col-sm-3">
        <button id="pairRound" class="btn btn-primary btn-block">Pair next round</button>
    </div>
</div>